<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">


    <LinearLayout
        android:id="@+id/mainl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/aldrich"
            android:gravity="center_vertical"
            android:text="Getting Data"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mainl">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

          <androidx.cardview.widget.CardView
              app:cardCornerRadius="10dp"
              android:elevation="10dp"
              app:cardElevation="10dp"
              android:layout_margin="10dp"
              android:backgroundTint="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView

                  android:layout_width="match_parent"
                  android:layout_height="150dp"
                  android:src="@drawable/c3" />
          </androidx.cardview.widget.CardView>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="No of occupants"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/green"
                app:errorEnabled="true"
                app:helperText="value in Nos\n* Person in case of Residential and hostel\n* No of Beds in case of hospital and hotels"
                app:helperTextTextColor="@color/green"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nos"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="Per Person Per day requirement"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/green"
                app:errorEnabled="true"
                app:helperText="value in Ipd per unit\n* Hostel = 40Ipd\n* Residential = 40 Ipd ( bath only)\n* Residential = 90 Ipd (Bath +Kitchen + water)\n* Hotel = 100-120 per bed"
                app:helperTextTextColor="@color/green"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ipd"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="No of Hours of Heating ( 4 to 8 hrs)"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/green"
                app:errorEnabled="true"
                app:helperText="value in Hrs\n* Most ideal 4 to 5 hrs"
                app:helperTextTextColor="@color/green"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/heat"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:hint="T1 - cold inlet water temperature"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/green"
                app:errorEnabled="true"
                app:helperText="value in \u00B0 C"
                app:helperTextTextColor="@color/green"
                app:hintTextColor="@color/black">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/temp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>


            <ProgressBar
                android:id="@+id/pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:visibility="gone" />


            <Button
                android:id="@+id/check"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Check" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/a4" />

</RelativeLayout>