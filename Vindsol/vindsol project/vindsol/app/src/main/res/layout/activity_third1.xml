<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".third1">

    <ImageView
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/a4" />


    <LinearLayout
        android:id="@+id/backl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">


            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/aldrich"
                android:gravity="center_vertical"
                android:text="Menu"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="30dp"
            android:src="@drawable/a2" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/select1"
            app:cardElevation="10dp"
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="10dp"
            app:strokeColor="@color/green"
            app:strokeWidth="1dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <ImageView

                    android:id="@+id/main1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/a5" />

                <TextView
                    android:id="@+id/main2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Air Source Heat Pump"
                    android:textAlignment="center"
                    android:textColor="@color/green"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <ScrollView
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/dom"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"

                        android:background="@color/green"
                        android:backgroundTint="#FFFFFF"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="5dp"
                                android:src="@drawable/homeicon"
                                android:layout_weight="0.15"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"/>

                            <TextView
                                android:layout_weight="0.85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/aldrich"
                                android:text="Domestic Hot Water Heat Pump"
                                android:background="@drawable/touch_eff1"
                                android:textAlignment="center"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:textColor="@color/green"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/com"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/green"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="5dp"
                                android:src="@drawable/comicon"
                                android:layout_weight="0.15"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"/>

                            <TextView
                                android:layout_weight="0.85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/aldrich"
                                android:text="Commercial Hot Water Heat Pump"
                                android:background="@drawable/touch_eff1"
                                android:textAlignment="center"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:textColor="@color/green"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/sphp"
                        android:layout_width="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"

                        android:background="@color/green"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="5dp"
                                android:src="@drawable/sicon"
                                android:layout_weight="0.15"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"/>

                            <TextView
                                android:layout_weight="0.85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/aldrich"
                                android:text="Spa and Swimming Pool Heat Pump"
                                android:background="@drawable/touch_eff1"
                                android:textAlignment="center"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:textColor="@color/green"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/high"
                        android:layout_width="0dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"


                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="10dp"
                        app:strokeColor="@color/green"
                        app:strokeWidth="1dp">


                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_gravity="center_horizontal|center_vertical"
                                android:padding="5dp"
                                android:src="@drawable/hightempicon"
                                android:layout_weight="0.15"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"/>

                            <TextView
                                android:layout_weight="0.85"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="@font/aldrich"
                                android:text="High Temp Industrial Heat Pump"
                                android:background="@drawable/touch_eff1"
                                android:textAlignment="center"
                                android:layout_gravity="center_vertical|center_horizontal"
                                android:textColor="@color/green"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


            </LinearLayout>


        </ScrollView>






    </LinearLayout>


</RelativeLayout>